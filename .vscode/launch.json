  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "address": "127.0.0.1",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "run tests",
      "program": "${workspaceRoot}/extensions/remodeler/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/test/enum-naming.js",
        "--timeout=2000000"
      ],
      "cwd": "${workspaceRoot}/extensions/remodeler"
    }
  ]
}